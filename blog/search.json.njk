---
pagination:
  data: i18n.languages
  size: 1
  alias: lang
permalink: "{% if lang == i18n.defaultLang %}blog/search.json{% else %}{{ lang }}/blog/search.json{% endif %}"
eleventyExcludeFromCollections: true
---
[
{% for post in collections.posts %}
  {
    "title": {{ post.data.title | json }},
    "summary": {{ post.data.summary | json }},
    "category": {{ post.data.category | json }},
    "tags": {{ (post.data.tags | contentTags) | json }},
    "brand": {{ post.data.brand | asArray | json }},
    "frequency": {{ post.data.frequency | asArray | json }},
    "scene": {{ post.data.scene | asArray | json }},
    "url": {{ post.url | json }}
  }{% if not loop.last %},{% endif %}
{% endfor %}
]
