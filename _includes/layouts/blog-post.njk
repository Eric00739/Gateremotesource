            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <!-- Article Content -->
                <div class="lg:col-span-2">
                    <!-- Article Header -->
                    <header class="mb-12 space-y-6">
                        <div class="flex flex-wrap items-center gap-3 text-xs">
                            {% if category %}
                            <span class="px-3 py-1 rounded-full bg-brand-accent/15 text-brand-accent font-bold uppercase tracking-[0.15em]">{{ category }}</span>
                            {% endif %}
                            <span class="text-brand-muted">{{ date | readableDate }}</span>
                            {% if read_time %}
                            <span class="text-brand-muted">{{ read_time }}</span>
                            {% endif %}
                        </div>
                        
                        <h1 class="text-4xl md:text-5xl font-bold text-brand-dark leading-tight">{{ title }}</h1>
                        
                        <p class="text-brand-muted text-xl leading-relaxed max-w-3xl">{{ summary }}</p>
                        
                        <div class="flex flex-wrap items-center gap-4 text-sm text-brand-muted">
                            <span>By <span class="text-brand-dark font-semibold">{{ author or 'GateRemoteSource' }}</span></span>
                            {% if author_role %}
                            <span class="glass-chip px-3 py-1 rounded-full text-brand-dark">{{ author_role }}</span>
                            {% endif %}
                        </div>
                        
                        {% if hero_image %}
                        <figure class="img-frame">
                            <img loading="lazy" decoding="async" src="{{ hero_image }}" alt="{{ hero_alt or title }}">
                            {% if hero_caption %}
                            <figcaption class="text-center text-brand-muted text-sm mt-3">{{ hero_caption }}</figcaption>
                            {% endif %}
                        </figure>
                        {% endif %}
