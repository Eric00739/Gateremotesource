<!DOCTYPE html>
<html lang="{{ lang or site.lang }}" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | {{ site.blogTitle }}</title>
    <meta name="description" content="{{ summary }}">
    {% set keywordItems = { "tags": tags, "category": category, "brand": brand, "frequency": frequency, "scene": scene } | keywordList %}
    {% set keywordString = keywordItems | unique | join(', ') %}
    {% set contentTags = tags | contentTags %}
    {% set canonicalUrl = site.url ~ (page.url | canonicalPath) %}
    {% set defaultHero = hero_image or '/logo/logo.png' %}
    {% set ogImages = (og_images or defaultHero) | asArray %}
    {% set ogPrimary = ogImages[0] %}
    {% if ogPrimary.url %}
    {% set ogPrimaryPath = ogPrimary.url %}
    {% else %}
    {% set ogPrimaryPath = ogPrimary %}
    {% endif %}
    {% set heroUrl = site.url ~ ogPrimaryPath %}
    <meta name="keywords" content="{{ keywordString }}">
    <meta name="author" content="{{ author or 'GateRemoteSource' }}">
    <link rel="canonical" href="{{ canonicalUrl }}">
    
    <script>
        (function() {
            var preferredHost = "www.gateremotesource.com";
            var currentProtocol = location.protocol;
            var currentHost = location.hostname;
            
            if (currentProtocol !== "https:") {
                var target = "https://" + currentHost + location.pathname + location.search + location.hash;
                if (target !== location.href) {
                    location.replace(target);
                }
                return;
            }
            
            if (currentHost !== preferredHost) {
                var target = "https://" + preferredHost + location.pathname + location.search + location.hash;
                if (target !== location.href) {
                    location.replace(target);
                }
            }
        })();
    </script>
    
    <meta property="og:type" content="article">
    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:locale" content="en_US">
    <meta property="og:title" content="{{ title }} | {{ site.blogTitle }}">
    <meta property="og:description" content="{{ summary }}">
    <meta property="og:url" content="{{ canonicalUrl }}">
    {% for image in ogImages %}
    {% if image.url %}
    {% set imagePath = image.url %}
    {% set imageAlt = image.alt or hero_alt or title %}
    {% else %}
    {% set imagePath = image %}
    {% set imageAlt = hero_alt or title %}
    {% endif %}
    <meta property="og:image" content="{{ site.url ~ imagePath }}">
    <meta property="og:image:alt" content="{{ imageAlt }}">
    {% endfor %}
    {% if date %}
    <meta property="article:published_time" content="{{ date | htmlDate }}">
    {% endif %}
    {% if category %}
    <meta property="article:section" content="{{ category }}">
    {% endif %}
    {% if contentTags.length %}
    {% for tag in contentTags %}
    <meta property="article:tag" content="{{ tag }}">
    {% endfor %}
    {% endif %}
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title }} | {{ site.blogTitle }}">
    <meta name="twitter:description" content="{{ summary }}">
    <meta name="twitter:image" content="{{ heroUrl }}">
    
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        "headline": {{ title | json }},
        "description": {{ summary | json }},
        "image": {{ heroUrl | json }},
        "datePublished": {{ (date | htmlDate) | json }},
        "dateModified": {{ (date | htmlDate) | json }},
        "author": {
            "@type": "Person",
            "name": {{ (author or "GateRemoteSource") | json }}
        },
        "publisher": {
            "@type": "Organization",
            "name": {{ site.name | json }},
            "logo": {
                "@type": "ImageObject",
                "url": {{ (site.url ~ "/logo/logo.png") | json }}
            }
        },
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": {{ canonicalUrl | json }}
        },
        "inLanguage": {{ (lang or site.lang) | json }},
        "keywords": {{ keywordString | json }}
    }
    </script>
    
    <link rel="icon" type="image/x-icon" href="/logo/favicon.ico?v=1">
    <link rel="icon" type="image/png" sizes="32x32" href="/logo/favicon-32.png?v=1">
    <link rel="icon" type="image/png" sizes="16x16" href="/logo/favicon-16.png?v=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/logo/apple-touch-icon.png?v=1">
    <link rel="manifest" href="/site.webmanifest?v=1">
    
    <link rel="preconnect" href="https://www.googletagmanager.com">
    <link rel="preload" href="/assets/css/tailwind.css" as="style">
    <link rel="stylesheet" href="/assets/css/tailwind.css">
    <noscript><link rel="stylesheet" href="/assets/css/tailwind.css"></noscript>
    
    <link rel="preload" href="/assets/vendor/fontawesome/css/all.min.css" as="style">
    <link rel="stylesheet" href="/assets/vendor/fontawesome/css/all.min.css">
    <noscript><link rel="stylesheet" href="/assets/vendor/fontawesome/css/all.min.css"></noscript>
    
    <link rel="preload" href="/assets/css/fonts.css" as="style">
    <link rel="stylesheet" href="/assets/css/fonts.css">
    <noscript><link rel="stylesheet" href="/assets/css/fonts.css"></noscript>
    
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZF8T77R309"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-ZF8T77R309');
    </script>
    
    <style>
        ::-webkit-scrollbar { width: 10px; }
        ::-webkit-scrollbar-track { background: #1D1D1F; }
        ::-webkit-scrollbar-thumb { background: #6E6E73; border-radius: 5px; }
        ::-webkit-scrollbar-thumb:hover { background: #0A84FF; }

        .nav-glass {
            background: rgba(255, 255, 255, 0.72);
            border-bottom: 1px solid rgba(0, 0, 0, 0.06);
            backdrop-filter: blur(20px) saturate(180%);
            -webkit-backdrop-filter: blur(20px) saturate(180%);
        }

        .glass-panel {
            background: rgba(255, 255, 255, 0.82);
            border: 1px solid rgba(0, 0, 0, 0.06);
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
        }
        
        /* Custom styles for special components */
        .callout {
            background: rgba(255, 255, 255, 0.85);
            border: 1px solid rgba(0, 0, 0, 0.08);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
        }
        
        .highlight-card {
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(0, 0, 0, 0.08);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
        }
        
        .img-frame {
            overflow: hidden;
            border: 1px solid rgba(0, 0, 0, 0.08);
            border-radius: 1rem;
            box-shadow: 0 14px 28px rgba(0, 0, 0, 0.14);
            background: rgba(255, 255, 255, 0.75);
        }
        
        .img-frame img {
            width: 100%;
            height: auto;
            display: block;
            object-fit: cover;
        }
        
        .toc-item {
            transition: all 0.2s ease;
        }
        .toc-item:hover {
            color: #0A84FF;
            padding-left: 0.5rem;
        }
        
        .toc-item.active {
            color: #0A84FF;
            font-weight: 600;
        }
        
        .progress-bar {
            position: fixed;
            top: 0;
            left: 0;
            height: 3px;
            background: linear-gradient(90deg, #0A84FF, #0071E3);
            z-index: 9999;
            transition: width 0.1s ease;
        }
        
        .back-to-top {
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }
        .back-to-top.visible {
            opacity: 1;
            visibility: visible;
        }
    </style>
</head>
