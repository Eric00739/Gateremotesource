    <style>
        :root {
            --rc-bg-alt: #F8F9FA;
            --rc-bg-base: #FFFFFF;
            --rc-text: #1D1D1F;
            --rc-muted: #6B7280;
            --rc-border: #E5E7EB;
            --rc-accent: #0071E3;
            --rc-accent-dark: #005BB5;
        }

        body {
            font-family: 'Inter', 'Roboto', 'Segoe UI', sans-serif;
            color: var(--rc-text);
        }

        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: rgba(0, 113, 227, 0.3); border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: rgba(0, 113, 227, 0.5); }

        .nav-glass {
            background: rgba(255, 255, 255, 0.8);
            border-bottom: 1px solid rgba(15, 23, 42, 0.08);
            backdrop-filter: blur(16px) saturate(180%);
            -webkit-backdrop-filter: blur(16px) saturate(180%);
        }

        .nav-link {
            position: relative;
            transition: color 0.2s ease;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -2px;
            width: 0;
            height: 2px;
            background: var(--rc-accent);
            transition: width 0.2s ease;
        }

        .nav-link:hover::after,
        .nav-link.active::after {
            width: 100%;
        }

        .nav-link.active {
            color: var(--rc-accent) !important;
            font-weight: 600;
        }

        .ghost-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #D1D5DB;
            color: #1F2937;
            background: #FFFFFF;
            border-radius: 10px;
            font-size: 13px;
            font-weight: 600;
            line-height: 1;
            padding: 10px 14px;
            transition: all 0.2s ease;
        }

        .ghost-btn:hover {
            border-color: var(--rc-accent);
            color: var(--rc-accent);
            background: #F8FBFF;
        }

        .text-link-arrow {
            display: inline-flex;
            align-items: center;
            font-size: 14px;
            font-weight: 600;
            color: var(--rc-accent);
            transition: color 0.2s ease;
        }

        .text-link-arrow:hover {
            color: var(--rc-accent-dark);
        }

        .site-logo-frame {
            width: 28px;
            height: 28px;
            min-width: 28px;
            min-height: 28px;
        }

        .site-logo-icon {
            width: 100%;
            height: 100%;
            max-width: 28px;
            max-height: 28px;
            object-fit: contain;
            display: block;
        }

        .site-footer-logo-icon {
            width: 40px;
            height: 40px;
            max-width: 40px;
            max-height: 40px;
            object-fit: contain;
            display: block;
        }

        .resource-hero {
            padding-top: 24px;
            padding-bottom: 42px;
        }

        .resource-hero-title {
            font-size: clamp(30px, 4vw, 44px);
            line-height: 1.1;
            letter-spacing: -0.02em;
            font-weight: 700;
        }

        .resource-hero-subtitle {
            font-size: 12px;
            font-weight: 600;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            color: #9CA3AF;
        }

        .resource-hero-copy {
            font-size: 14px;
            line-height: 1.8;
            color: var(--rc-muted);
            max-width: 72ch;
        }

        .resource-band {
            border-top: 1px solid #EEF1F4;
        }

        .resource-band.alt {
            background: var(--rc-bg-alt);
        }

        .resource-band.base {
            background: var(--rc-bg-base);
        }

        .category-card {
            padding-top: 30px;
            padding-bottom: 30px;
        }

        .category-card-inner {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }

        .category-col-left h2 {
            font-size: 28px;
            line-height: 1.2;
            letter-spacing: -0.01em;
            font-weight: 650;
            margin: 0;
        }

        .category-meta {
            margin-top: 10px;
            font-size: 11px;
            line-height: 1.4;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            color: #9CA3AF;
        }

        .category-icon-wrap {
            width: 50px;
            height: 50px;
            border-radius: 14px;
            border: 1px solid #E5E7EB;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 14px;
            background: rgba(255, 255, 255, 0.8);
        }

        .category-icon-wrap i {
            font-size: 20px;
            color: #9CA3AF;
            transition: color 0.2s ease;
        }

        .category-card:hover .category-icon-wrap i {
            color: var(--rc-accent);
        }

        .category-description {
            font-size: 14px;
            line-height: 1.85;
            color: var(--rc-muted);
            max-width: 52ch;
        }

        .category-right-title {
            font-size: 11px;
            line-height: 1.3;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            color: #9CA3AF;
            margin-bottom: 10px;
        }

        .resource-links {
            margin: 0;
            padding: 0;
            list-style: none;
            display: flex;
            flex-direction: column;
            gap: 0;
        }

        .resource-link-item {
            border-top: 1px dashed #E5E7EB;
        }

        .resource-link-item:first-child {
            border-top: 0;
        }

        .resource-link {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            gap: 16px;
            padding: 11px 0;
            color: #111827;
            transition: color 0.2s ease;
        }

        .resource-link:hover {
            color: var(--rc-accent);
        }

        .resource-link-title {
            font-size: 14px;
            line-height: 1.6;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .resource-link-arrow {
            flex: 0 0 auto;
            font-size: 14px;
            line-height: 1.2;
            color: #9CA3AF;
            transform: translateY(2px);
            transition: color 0.2s ease;
        }

        .resource-link:hover .resource-link-arrow {
            color: var(--rc-accent);
        }

        .resource-pagination a {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            border: 1px solid #D1D5DB;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 13px;
            font-weight: 600;
            color: #4B5563;
            transition: all 0.2s ease;
            background: #FFFFFF;
        }

        .resource-pagination a:hover,
        .resource-pagination a[aria-current="page"] {
            border-color: var(--rc-accent);
            color: var(--rc-accent);
            background: #F8FBFF;
        }

        .line-input {
            width: 100%;
            border: 0;
            border-bottom: 1px solid #D1D5DB;
            padding: 9px 0;
            background: transparent;
            font-size: 14px;
            color: #111827;
        }

        .line-input:focus {
            outline: none;
            border-bottom-color: var(--rc-accent);
        }

        .cert-grid {
            display: grid;
            grid-template-columns: repeat(1, minmax(0, 1fr));
            gap: 14px;
        }

        .cert-card {
            border: 1px solid #E5E7EB;
            border-radius: 14px;
            padding: 18px;
            background: #FFFFFF;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        .cert-icon {
            font-size: 20px;
            color: #9CA3AF;
            filter: grayscale(1);
            transition: color 0.2s ease, filter 0.2s ease;
        }

        .cert-name {
            font-size: 12px;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            color: #9CA3AF;
            transition: color 0.2s ease;
        }

        .cert-card:hover {
            border-color: #BFDBFE;
            box-shadow: 0 6px 20px rgba(59, 130, 246, 0.08);
        }

        .cert-card:hover .cert-icon {
            color: var(--rc-accent);
            filter: grayscale(0);
        }

        .cert-card:hover .cert-name {
            color: #2563EB;
        }

        .mobile-quote-modal[hidden] {
            display: none !important;
        }

        @media (min-width: 768px) {
            .cert-grid {
                grid-template-columns: repeat(3, minmax(0, 1fr));
            }
        }

        @media (min-width: 1024px) {
            .category-col-left {
                flex: 0 0 20%;
                max-width: 20%;
                padding-right: 16px;
            }

            .category-col-middle {
                flex: 0 0 40%;
                max-width: 40%;
                padding-right: 24px;
            }

            .category-col-right {
                flex: 0 0 40%;
                max-width: 40%;
            }

            .category-card-inner {
                flex-direction: row;
            }
        }

        @media (max-width: 1023px) and (min-width: 768px) {
            .category-card-inner {
                display: grid;
                grid-template-columns: repeat(2, minmax(0, 1fr));
                gap: 24px;
            }

            .category-col-left {
                grid-column: 1 / -1;
                display: flex;
                align-items: center;
                gap: 14px;
            }

            .category-col-left .category-icon-wrap {
                margin-bottom: 0;
            }

            .category-col-left h2 {
                font-size: 26px;
            }
        }

        @media (max-width: 767px) {
            .resource-hero {
                padding-top: 14px;
                padding-bottom: 30px;
            }

            .resource-hero-title {
                font-size: 34px;
            }

            .category-col-left h2 {
                font-size: 24px;
            }

            .resource-link-title,
            .category-description,
            .resource-hero-copy {
                font-size: 14px;
            }
        }
    </style>
</head>
