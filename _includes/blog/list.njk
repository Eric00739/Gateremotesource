    <main id="main-content" class="pt-24 pb-16 min-h-screen" role="main">
        {% set hasPosts = posts and posts.length > 0 %}
        {% if hasPosts %}
        {% set categoryDescriptions = {
            "RF Engineering": "Deep RF fundamentals and protocol-level diagnostics for remote and receiver ecosystems. Best for engineering teams improving compatibility and reducing return rates.",
            "Engineering": "Component-level design insights, manufacturing guidance, and integration best practices for stable, high-volume deployment.",
            "Programming": "Step-by-step programming workflows for installers and distributors, designed to reduce troubleshooting time in field operations.",
            "Installation Guides": "Practical installation procedures, wiring rules, and commissioning checks for faster go-live and fewer after-sales tickets."
        } %}
        {% set categoryIcons = {
            "RF Engineering": "fa-solid fa-wave-square",
            "Engineering": "fa-solid fa-gears",
            "Programming": "fa-solid fa-code",
            "Installation Guides": "fa-solid fa-screwdriver-wrench"
        } %}
        {% set globalPosts = collections.posts %}
        {% set categoryList = globalPosts | pluck("data.category") | unique %}

        <section class="resource-hero">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <p class="resource-hero-subtitle">Resource Center</p>
                <h1 class="resource-hero-title mt-2">{{ site.blogTitle }}</h1>
                <p class="resource-hero-copy mt-4">{{ site.blogDescription }} Structured by category so procurement teams, engineers, and installers can jump directly to the material they need.</p>
                <div class="mt-6 flex flex-wrap items-center gap-3">
                    <a href="/contact/?intent=sample-kit&source=blog_resource_center" class="ghost-btn">Request Sample Kit</a>
                    <button id="desktopQuoteCta" type="button" class="ghost-btn" aria-haspopup="dialog" aria-controls="mobileQuoteModal">Get a Quick Quote</button>
                    <a href="/contact/" class="text-link-arrow">Download Guide →</a>
                </div>
            </div>
        </section>

        <section aria-label="Resource categories">
            {% for category in categoryList %}
            {% if category %}
            {% set categoryTotal = 0 %}
            {% for post in globalPosts %}
                {% if post.data.category == category %}
                    {% set categoryTotal = categoryTotal + 1 %}
                {% endif %}
            {% endfor %}
            {% if categoryTotal > 0 %}
